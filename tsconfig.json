{
  "compilerOptions": {
    "target": "ES2020",

    "module": "NodeNext", // or Node16
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@backend/utils": ["packages/utils/src/index.ts"],
      "@backend/protos/*": ["packages/protos/dist/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
